@using Microsoft.AspNetCore.Identity
@using RazorPage.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager



<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item">
			<a class="nav-link text-black" asp-area="Identity" asp-page="/Account/Manage/Index">Xin chao @UserManager.GetUserName(User)</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-black" asp-area="Identity" asp-page="/Account/Logout">Dang xuat</a>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-black" asp-area="Identity" asp-page="/Account/Register">Dang ky</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-black" asp-area="Identity" asp-page="/Account/Login">Dang nhap</a>
		</li>
	}
	
</ul>